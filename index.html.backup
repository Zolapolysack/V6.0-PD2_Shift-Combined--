            socket.addEventListener('open', () => console.debug('[dev-ws] connected to', WS_URL));
            socket.addEventListener('message', (ev) => {
              try {
                const m = JSON.parse(ev.data || '{}');
                if (m && m.type === 'reload') {
                  console.debug('[dev-ws] reload event, path=', m.path);
