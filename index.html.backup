  <!-- Additional scripts for auth and utilities -->
  <script>
    (function(){
      const toast = document.getElementById('toast');

      function showToast(message) {
        if (!toast) return;
        toast.textContent = message;
        toast.classList.remove('opacity-0', 'pointer-events-none');
        toast.classList.add('opacity-100');
        clearTimeout(showToast._t);
        showToast._t = setTimeout(() => {
          toast.classList.add('opacity-0', 'pointer-events-none');
          toast.classList.remove('opacity-100');
        }, 1800);
      }

      // Logout handler
      const logoutBtn = document.getElementById('pd2LogoutBtn');
      if (logoutBtn) {
        logoutBtn.addEventListener('click', () => {
          try {
            if (window.PD2Auth && typeof PD2Auth.logout === 'function') {
              PD2Auth.logout();
            }
          } catch(_){}
          showToast('ออกจากระบบแล้ว');
          // Mount login overlay
          setTimeout(() => {
            try {
              if (window.PD2Auth && typeof PD2Auth.mountLoginGate === 'function') {
                PD2Auth.mountLoginGate({ loginPath: './login V2.0/forms/neumorphism/index.html' });
              }
            } catch(_){}
          }, 100);
        });
      }

      // Reset system handler
      const resetBtn = document.getElementById('pd2ResetBtn');
      const resetMenu = document.getElementById('pd2ResetMenu');
      const resetWrap = document.getElementById('pd2ResetWrap');
      
      if (resetBtn && resetMenu && resetWrap) {
        function toggleMenu(force) {
          const show = force !== undefined ? force : resetMenu.classList.contains('hidden');
          resetMenu.classList.toggle('hidden', !show);
        }
        
        resetBtn.addEventListener('click', (e) => {
          e.stopPropagation();
          toggleMenu();
        });
        
        document.addEventListener('click', (e) => {
          if (!resetWrap.contains(e.target)) toggleMenu(false);
        }, { passive: true, capture: true });

        resetMenu.querySelectorAll('.pd2-reset-item').forEach(item => {
          item.addEventListener('click', async (e) => {
            const mode = item.getAttribute('data-mode');
            toggleMenu(false);
            
            const modeLabel = mode === 'partial' ? 'บางส่วน' : 'ทั้งหมด';
            showToast('รีเซ็ต' + modeLabel + '...');
            
            try {
              // Clear localStorage
              if (mode === 'full') {
                const keys = [];
                for (let i = 0; i < localStorage.length; i++) {
                  const k = localStorage.key(i);
                  if (k && /pd2|shift|wage|machine|fabric|employee/i.test(k)) {
                    keys.push(k);
                  }
                }
                keys.forEach(k => localStorage.removeItem(k));
              }
              
              // Clear caches
              if (window.caches) {
                const names = await caches.keys();
                await Promise.all(names.map(n => caches.delete(n)));
              }
              
              // Unregister service workers
              if (navigator.serviceWorker) {
                const regs = await navigator.serviceWorker.getRegistrations();
                await Promise.all(regs.map(r => r.unregister()));
              }
              
              setTimeout(() => {
                location.reload(true);
              }, 500);
            } catch (err) {
              console.error('Reset error:', err);
              showToast('เกิดข้อผิดพลาด กรุณาลองใหม่');
            }
          });
        });
      }

      // Auth gate initialization
      try {
